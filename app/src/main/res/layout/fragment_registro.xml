<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".RegistroFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Registra Tu Taqueria"
            android:textColor="#ffff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/while_background"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtTaqueria"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Nombre de la Taqueria"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLength="25"/>

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Correo Electrónico"
                android:inputType="textEmailSubject"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtTelefono"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Número Telefono"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLength="10"/>

            <EditText
                android:id="@+id/edtDireccion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_map"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Dirección de la Taqueria"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLength="250"/>

            <EditText
                android:id="@+id/edtContraseña"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Ingresa una contraseña"
                android:inputType="textPassword"
                app:endIconMode="password_toggle"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLength="20"/>

            <EditText
                android:id="@+id/edtConfirmarContraseña"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/while_background_edt"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirma la contraseña"
                android:inputType="textPassword"
                app:endIconMode="password_toggle"
                android:paddingStart="10dp"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLength="20"/>

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="#ffff"
                android:text="Registrarse"
                android:textColor="#000"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>